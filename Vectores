#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

double promedio (double a[], int tamanio);
void cargar (double a[], int tamanio);
void mostrar (double a[], int tamanio);

void main()

{
int N;
double A[MAX], prom;

	do
	{cout<<"Ingrese el numero de elementos del vector (Max 100): "<<endl;
	cin>> N;
	}while ((N<=0) || (N>100));
	cargar(A,N);
	prom=promedio(A,N);
	mostrar(A,N);
	cout<<"El promedio es: "<<prom<<endl;

getch();
}

void cargar (double a[], int tamanio)
{	int i;
	for (i=0;i<tamanio;i++)
	{cout<<"Ingrese a["<<i<<"]: "<<endl;
	cin>>a[i];
	}
}

double promedio (double a[], int tamanio)

{	double p, suma;
	suma=0;
	for (int i=0;i<tamanio;i++)
	suma= suma+a[i];
	p=suma/tamanio;
	return p;
}

void mostrar (double a[], int tamanio)
{	for (int i=0;i<tamanio;i++)
{cout<<"El vector a["<<i<<"] es: "<<a[i]<<endl;}
}
